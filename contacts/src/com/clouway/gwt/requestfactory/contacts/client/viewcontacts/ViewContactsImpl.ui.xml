<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .marginBottom {
      margin-bottom: 20px;
    }
  </ui:style>

  <g:HTMLPanel>

    <g:Button ui:field="addContact" addStyleNames="{style.marginBottom}">Add Contact</g:Button>

    <g:HorizontalPanel ui:field="loadingNotification">
      <g:Image url="images/loadingNotification.gif" />
    </g:HorizontalPanel>

    <g:FlexTable ui:field="contactsTable"/>
  </g:HTMLPanel>
</ui:UiBinder>