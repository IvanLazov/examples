<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .ageBox {
      margin-left: 46px;
    }
  </ui:style>

  <g:HTMLPanel>
    <div>
      FirstName: <g:TextBox ui:field="firstname" />
    </div>

    <div>
      LastName: <g:TextBox ui:field="lastname" />
    </div>

    <div>
      Age: <g:IntegerBox ui:field="age" addStyleNames="{style.ageBox}"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>