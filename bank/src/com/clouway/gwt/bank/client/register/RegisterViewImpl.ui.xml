<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .registrationForm {

      position: relative;

      border: 1px;
      border-style: solid;
      border-color: #000000;

      width: 160px;

      margin-top: 100px;
      margin-left: auto;
      margin-right: auto;

      padding: 10 20 10 20;
    }

    .notificationLabel {

      position: absolute;
      bottom: -50px;
      text-align: center;
    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.registrationForm}">
    <g:Label text="Username:" />
    <g:TextBox ui:field="username" />
    <g:Label text="Password:" />
    <g:PasswordTextBox ui:field="password" />
    <g:Button ui:field="register" text="Register" />
    <g:Label ui:field="notification" addStyleNames="{style.notificationLabel}"/>
  </g:HTMLPanel>

</ui:UiBinder>