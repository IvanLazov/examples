<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .marginBottom {
      margin-bottom: 20px;
    }
  </ui:style>

  <g:HTMLPanel>

    <div>
      <g:Button ui:field="view" addStyleNames="{style.marginBottom}">View Contacts</g:Button>
    </div>

    <g:Label text="Firstname: "/>
    <g:TextBox ui:field="firstname" />

    <g:Label text="Lastname: "/>
    <g:TextBox ui:field="lastname" />

    <g:Label text="Age: " />
    <g:TextBox ui:field="age" />

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>