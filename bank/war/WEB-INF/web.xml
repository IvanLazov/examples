<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <servlet>
    <servlet-name>xsrf</servlet-name>
    <servlet-class>
      com.clouway.gwt.bank.server.authorization.TokenGeneratorImpl
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>xsrf</servlet-name>
    <url-pattern>/Bank/xsrf</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>mainPage</servlet-name>
    <servlet-class>
      com.clouway.gwt.bank.server.MainPageServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mainPage</servlet-name>
    <url-pattern>/Bank.html</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>gwt.xsrf.session_cookie_name</param-name>
    <param-value>JSESSIONID</param-value>
  </context-param>
</web-app>
