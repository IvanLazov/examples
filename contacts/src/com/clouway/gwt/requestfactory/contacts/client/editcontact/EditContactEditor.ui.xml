<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>

    .ageBox {
      margin-left: 43px;
    }
  </ui:style>

  <g:HTMLPanel>

    <div>
      Firstname: <g:TextBox ui:field="firstname"/>
    </div>

    <div>
      Lastname: <g:TextBox ui:field="lastname"/>
    </div>

    <div>
      Age: <g:IntegerBox ui:field="age" addStyleNames="{style.ageBox}"/>
    </div>

  </g:HTMLPanel>

</ui:UiBinder>